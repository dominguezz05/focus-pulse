{
  "name": "focus-pulse",
  "displayName": "Focus Pulse",
  "description": "Track your focus level per file with Pomodoro timers, XP progression, achievements, and a real-time dashboard.",
  "version": "2.2.0",
  "publisher": "dominguezz05",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dominguezz05/focus-pulse.git"
  },
  "categories": [
    "Extension Packs",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "focus",
    "productivity",
    "pomodoro",
    "xp",
    "dashboard",
    "gamification"
  ],
  "icon": "media/publisher-icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:focusPulse.showStats",
    "onCommand:focusPulse.openDashboard",
    "onCommand:focusPulse.pomodoroToggle",
    "onCommand:focusPulse.resetData",
    "onCommand:focusPulse.deepWorkToggle",
    "onCommand:focusPulse.createCustomAchievement",
    "onCommand:focusPulse.manageCustomAchievements"
  ],
  "main": "./out/extension-refactored.js",
  "contributes": {
    "commands": [
      {
        "command": "focusPulse.showStats",
        "title": "Focus Pulse: Mostrar estadísticas del archivo actual"
      },
      {
        "command": "focusPulse.openDashboard",
        "title": "Focus Pulse: Abrir dashboard"
      },
      {
        "command": "focusPulse.pomodoroToggle",
        "title": "Focus Pulse: Iniciar/Parar Pomodoro"
      },
      {
        "command": "focusPulse.resetData",
        "title": "Focus Pulse: Resetear histórico y XP"
      },
      {
        "command": "focusPulse.exportData",
        "title": "Focus Pulse: Exportar histórico (interno)"
      },
      {
        "command": "focusPulse.deepWorkToggle",
        "title": "Focus Pulse: Alternar modo Deep Work"
      },
      {
        "command": "focusPulse.createCustomAchievement",
        "title": "Focus Pulse: Crear logro personalizado"
      },
      {
        "command": "focusPulse.manageCustomAchievements",
        "title": "Focus Pulse: Gestionar logros personalizados"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Pulse",
      "properties": {
        "focusPulse.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el indicador de Focus Pulse en la barra de estado."
        },
        "focusPulse.minMinutesForScore": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "description": "Minutos mínimos de trabajo para que la puntuación de foco sea estable."
        },
        "focusPulse.score.timeWeight": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "description": "Peso del tiempo (minutos de trabajo) en el cálculo del Focus Score."
        },
        "focusPulse.score.editsWeight": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "description": "Peso de las ediciones por minuto en el cálculo del Focus Score."
        },
        "focusPulse.score.switchPenalty": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "description": "Penalización por cambios de archivo (switches por minuto)."
        },
        "focusPulse.enablePomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el Pomodoro de Focus Pulse en la barra de estado."
        },
        "focusPulse.pomodoro.workMinutes": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "Duración del bloque de trabajo (minutos)."
        },
        "focusPulse.pomodoro.breakMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Duración del descanso (minutos)."
        },
        "focusPulse.goals.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Activar objetivos diarios (minutos y pomodoros)."
        },
        "focusPulse.goals.minutes": {
          "type": "number",
          "default": 60,
          "minimum": 1,
          "description": "Minutos de foco objetivo para completar el día."
        },
        "focusPulse.goals.pomodoros": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "Número de pomodoros objetivo para completar el día."
        },
        "focusPulse.deepWork.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Permitir el modo Deep Work en Focus Pulse."
        },
        "focusPulse.deepWork.durationMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Duración de una sesión de Deep Work (minutos)."
        },
        "focusPulse.deepWork.switchPenalty": {
          "type": "number",
          "default": 40,
          "minimum": 0,
          "description": "Penalización extra por cambios de archivo durante Deep Work."
        },
        "focusPulse.deepWork.xpBonus": {
          "type": "number",
          "default": 150,
          "minimum": 0,
          "description": "XP extra al completar una sesión de Deep Work."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.0"
  }
}
