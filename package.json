{
  "name": "focus-pulse",
  "displayName": "Focus Pulse",
  "description": "Track your focus level per file with Pomodoro timers, XP progression, achievements, and a real-time dashboard.",
  "version": "2.7.1",
  "publisher": "dominguezz05",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dominguezz05/focus-pulse.git"
  },
  "categories": [
    "Extension Packs",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "focus",
    "productivity",
    "pomodoro",
    "xp",
    "dashboard",
    "gamification"
  ],
  "icon": "media/publisher-icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:focusPulse.showStats",
    "onCommand:focusPulse.openDashboard",
    "onCommand:focusPulse.pomodoroToggle",
    "onCommand:focusPulse.resetData",
    "onCommand:focusPulse.deepWorkToggle",
    "onCommand:focusPulse.createCustomAchievement",
    "onCommand:focusPulse.manageCustomAchievements",
    "onCommand:focusPulse.exportDataToFile",
    "onCommand:focusPulse.importDataFromFile",
    "onCommand:focusPulse.exportAsJSON",
    "onCommand:focusPulse.exportAsXML",
    "onCommand:focusPulse.authenticate",
    "onCommand:focusPulse.createGitHubToken",
    "onCommand:focusPulse.enableAutoSync",
    "onCommand:focusPulse.disableAutoSync",
    "onCommand:focusPulse.manualSync",
    "onCommand:focusPulse.downloadSync",
    "onCommand:focusPulse.listSyncs",
    "onCommand:focusPulse.deleteSync",
    "onCommand:focusPulse.signOut",
    "onCommand:focusPulse.syncStatus",
    "onCommand:focusPulse.showGitStats",
    "onCommand:focusPulse.testNotification",
    "onCommand:focusPulse.toggleNotifications",
    "onCommand:focusPulse.notificationSettings",
    "onCommand:focusPulse.shareProfile",
    "onCommand:focusPulse.addFriend",
    "onCommand:focusPulse.removeFriend"
  ],
  "main": "./out/extension-refactored.js",
  "contributes": {
    "commands": [
      {
        "command": "focusPulse.showStats",
        "title": "Focus Pulse: Show current file statistics"
      },
      {
        "command": "focusPulse.openDashboard",
        "title": "Focus Pulse: Open dashboard"
      },
      {
        "command": "focusPulse.pomodoroToggle",
        "title": "Focus Pulse: Start/Stop Pomodoro"
      },
      {
        "command": "focusPulse.resetData",
        "title": "Focus Pulse: Reset history and XP"
      },
      {
        "command": "focusPulse.exportData",
        "title": "Focus Pulse: Export history (internal)"
      },
      {
        "command": "focusPulse.deepWorkToggle",
        "title": "Focus Pulse: Toggle Deep Work mode"
      },
      {
        "command": "focusPulse.createCustomAchievement",
        "title": "Focus Pulse: Create custom achievement"
      },
      {
        "command": "focusPulse.manageCustomAchievements",
        "title": "Focus Pulse: Manage custom achievements"
      },
      {
        "command": "focusPulse.exportDataToFile",
        "title": "Focus Pulse: Export data to file"
      },
      {
        "command": "focusPulse.importDataFromFile",
        "title": "Focus Pulse: Import data from file"
      },
      {
        "command": "focusPulse.exportAsJSON",
        "title": "Focus Pulse: Export as JSON"
      },
      {
        "command": "focusPulse.exportAsXML",
        "title": "Focus Pulse: Export as XML"
      },
      {
        "command": "focusPulse.authenticate",
        "title": "Focus Pulse: Authenticate account"
      },
      {
        "command": "focusPulse.createGitHubToken",
        "title": "Focus Pulse: Create/Manage GitHub Token"
      },
      {
        "command": "focusPulse.enableAutoSync",
        "title": "Focus Pulse: Enable automatic sync"
      },
      {
        "command": "focusPulse.disableAutoSync",
        "title": "Focus Pulse: Disable automatic sync"
      },
      {
        "command": "focusPulse.manualSync",
        "title": "Focus Pulse: Sync now"
      },
      {
        "command": "focusPulse.downloadSync",
        "title": "Focus Pulse: Download sync"
      },
      {
        "command": "focusPulse.listSyncs",
        "title": "Focus Pulse: List syncs"
      },
      {
        "command": "focusPulse.deleteSync",
        "title": "Focus Pulse: Delete sync"
      },
      {
        "command": "focusPulse.signOut",
        "title": "Focus Pulse: Sign out"
      },
      {
        "command": "focusPulse.syncStatus",
        "title": "Focus Pulse: Sync status"
      },
      {
        "command": "focusPulse.showGitStats",
        "title": "Focus Pulse: View Git statistics"
      },
      {
        "command": "focusPulse.testNotification",
        "title": "Focus Pulse: Test notification"
      },
      {
        "command": "focusPulse.toggleNotifications",
        "title": "Focus Pulse: Enable/Disable notifications"
      },
      {
        "command": "focusPulse.notificationSettings",
        "title": "Focus Pulse: Configure notifications"
      },
      {
        "command": "focusPulse.shareProfile",
        "title": "Focus Pulse: Share profile"
      },
      {
        "command": "focusPulse.addFriend",
        "title": "Focus Pulse: Add friend"
      },
      {
        "command": "focusPulse.removeFriend",
        "title": "Focus Pulse: Remove friend"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Pulse",
      "properties": {
        "focusPulse.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Focus Pulse indicator in status bar."
        },
        "focusPulse.minMinutesForScore": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "description": "Minimum work minutes for focus score to be stable."
        },
        "focusPulse.score.timeWeight": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "description": "Weight of time (work minutes) in Focus Score calculation."
        },
        "focusPulse.score.editsWeight": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "description": "Weight of edits per minute in Focus Score calculation."
        },
        "focusPulse.score.switchPenalty": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "description": "Penalty for file changes (switches per minute)."
        },
        "focusPulse.enablePomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Show Focus Pulse Pomodoro in status bar."
        },
        "focusPulse.pomodoro.workMinutes": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "Work block duration (minutes)."
        },
        "focusPulse.pomodoro.breakMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Break duration (minutes)."
        },
        "focusPulse.goals.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable daily goals (minutes and pomodoros)."
        },
        "focusPulse.goals.minutes": {
          "type": "number",
          "default": 60,
          "minimum": 1,
          "description": "Target focus minutes to complete the day."
        },
        "focusPulse.goals.pomodoros": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "Target number of pomodoros to complete the day."
        },
        "focusPulse.deepWork.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Allow Deep Work mode in Focus Pulse."
        },
        "focusPulse.deepWork.durationMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Duration of a Deep Work session (minutes)."
        },
        "focusPulse.deepWork.switchPenalty": {
          "type": "number",
          "default": 40,
          "minimum": 0,
          "description": "Extra penalty for file changes during Deep Work."
        },
        "focusPulse.deepWork.xpBonus": {
          "type": "number",
          "default": 150,
          "minimum": 0,
          "description": "Extra XP upon completing a Deep Work session."
        },
        "focusPulse.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for sync (stored securely)."
        },
        "focusPulse.assistant.personality": {
          "type": "string",
          "enum": [
            "motivational",
            "neutral",
            "zen",
            "humorous"
          ],
          "default": "motivational",
          "description": "Virtual assistant personality (affects message tone)."
        },
        "focusPulse.assistant.flowProtection": {
          "type": "boolean",
          "default": true,
          "description": "Protect Flow State: avoid interruptions when you're highly focused."
        },
        "focusPulse.assistant.contextualMessages": {
          "type": "boolean",
          "default": true,
          "description": "Contextual messages based on the file type you're editing."
        },
        "focusPulse.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Focus Pulse notification system."
        },
        "focusPulse.notifications.style": {
          "type": "string",
          "enum": [
            "native",
            "toast",
            "both"
          ],
          "default": "toast",
          "description": "Notification style: VS Code native, dashboard toast, or both."
        },
        "focusPulse.notifications.position": {
          "type": "string",
          "enum": [
            "top-right",
            "bottom-right",
            "top-left",
            "bottom-left"
          ],
          "default": "top-right",
          "description": "Position of toast notifications in dashboard."
        },
        "focusPulse.notifications.duration": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Duration of toast notifications in milliseconds."
        },
        "focusPulse.notifications.sound": {
          "type": "boolean",
          "default": false,
          "description": "Play sound with notifications (experimental)."
        },
        "focusPulse.notifications.types.achievements": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when achievements are unlocked."
        },
        "focusPulse.notifications.types.levelUp": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when you level up."
        },
        "focusPulse.notifications.types.pomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when you complete pomodoros."
        },
        "focusPulse.notifications.types.goals": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when you complete daily goals."
        },
        "focusPulse.notifications.types.deepWork": {
          "type": "boolean",
          "default": true,
          "description": "Show Deep Work session notifications."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild ./src/extension-refactored.ts --bundle --outfile=out/extension-refactored.js --external:vscode --format=cjs --platform=node",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests\"",
    "package": "vsce package --no-dependencies",
    "commit": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "publish:vsce": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "pnpm run publish:vsce && pnpm run publish:ovsx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.27.2",
    "ovsx": "^0.10.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1"
  }
}
