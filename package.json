{
  "name": "focus-pulse",
  "displayName": "Focus Pulse",
  "description": "Mide tu nivel de foco por archivo, con Pomodoro, XP, logros y dashboard en tiempo real.",
  "version": "1.0.0",
  "publisher": "dominguezz05",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:focusPulse.showStats",
    "onCommand:focusPulse.openDashboard",
    "onCommand:focusPulse.pomodoroToggle",
    "onCommand:focusPulse.resetData"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusPulse.showStats",
        "title": "Focus Pulse: Mostrar estadísticas del archivo actual"
      },
      {
        "command": "focusPulse.openDashboard",
        "title": "Focus Pulse: Abrir dashboard"
      },
      {
        "command": "focusPulse.pomodoroToggle",
        "title": "Focus Pulse: Iniciar/Parar Pomodoro"
      },
      {
        "command": "focusPulse.resetData",
        "title": "Focus Pulse: Resetear histórico y XP"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Pulse",
      "properties": {
        "focusPulse.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el indicador de Focus Pulse en la barra de estado."
        },
        "focusPulse.minMinutesForScore": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "description": "Minutos mínimos de trabajo para que la puntuación de foco sea estable."
        },
        "focusPulse.score.timeWeight": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "description": "Peso del tiempo (minutos de trabajo) en el cálculo del Focus Score."
        },
        "focusPulse.score.editsWeight": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "description": "Peso de las ediciones por minuto en el cálculo del Focus Score."
        },
        "focusPulse.score.switchPenalty": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "description": "Penalización por cambios de archivo (switches por minuto)."
        },
        "focusPulse.enablePomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el Pomodoro de Focus Pulse en la barra de estado."
        },
        "focusPulse.pomodoro.workMinutes": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "Duración del bloque de trabajo (minutos)."
        },
        "focusPulse.pomodoro.breakMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Duración del descanso (minutos)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.0"
  }
}
