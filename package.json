{
  "name": "focus-pulse",
  "displayName": "Focus Pulse",
  "description": "Track your focus level per file with Pomodoro timers, XP progression, achievements, and a real-time dashboard.",
  "version": "2.5.1",
  "publisher": "dominguezz05",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dominguezz05/focus-pulse.git"
  },
  "categories": [
    "Extension Packs",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "focus",
    "productivity",
    "pomodoro",
    "xp",
    "dashboard",
    "gamification"
  ],
  "icon": "media/publisher-icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:focusPulse.showStats",
    "onCommand:focusPulse.openDashboard",
    "onCommand:focusPulse.pomodoroToggle",
    "onCommand:focusPulse.resetData",
    "onCommand:focusPulse.deepWorkToggle",
    "onCommand:focusPulse.createCustomAchievement",
    "onCommand:focusPulse.manageCustomAchievements",
    "onCommand:focusPulse.exportDataToFile",
    "onCommand:focusPulse.importDataFromFile",
    "onCommand:focusPulse.exportAsJSON",
    "onCommand:focusPulse.exportAsXML",
    "onCommand:focusPulse.authenticate",
    "onCommand:focusPulse.createGitHubToken",
    "onCommand:focusPulse.enableAutoSync",
    "onCommand:focusPulse.disableAutoSync",
    "onCommand:focusPulse.manualSync",
    "onCommand:focusPulse.downloadSync",
    "onCommand:focusPulse.listSyncs",
    "onCommand:focusPulse.deleteSync",
    "onCommand:focusPulse.signOut",
    "onCommand:focusPulse.syncStatus",
    "onCommand:focusPulse.showGitStats",
    "onCommand:focusPulse.testNotification",
    "onCommand:focusPulse.toggleNotifications",
    "onCommand:focusPulse.notificationSettings"
  ],
  "main": "./out/extension-refactored.js",
  "contributes": {
    "commands": [
      {
        "command": "focusPulse.showStats",
        "title": "Focus Pulse: Mostrar estadísticas del archivo actual"
      },
      {
        "command": "focusPulse.openDashboard",
        "title": "Focus Pulse: Abrir dashboard"
      },
      {
        "command": "focusPulse.pomodoroToggle",
        "title": "Focus Pulse: Iniciar/Parar Pomodoro"
      },
      {
        "command": "focusPulse.resetData",
        "title": "Focus Pulse: Resetear histórico y XP"
      },
      {
        "command": "focusPulse.exportData",
        "title": "Focus Pulse: Exportar histórico (interno)"
      },
      {
        "command": "focusPulse.deepWorkToggle",
        "title": "Focus Pulse: Alternar modo Deep Work"
      },
      {
        "command": "focusPulse.createCustomAchievement",
        "title": "Focus Pulse: Crear logro personalizado"
      },
      {
        "command": "focusPulse.manageCustomAchievements",
        "title": "Focus Pulse: Gestionar logros personalizados"
      },
      {
        "command": "focusPulse.exportDataToFile",
        "title": "Focus Pulse: Exportar datos a archivo"
      },
      {
        "command": "focusPulse.importDataFromFile",
        "title": "Focus Pulse: Importar datos desde archivo"
      },
      {
        "command": "focusPulse.exportAsJSON",
        "title": "Focus Pulse: Exportar como JSON"
      },
      {
        "command": "focusPulse.exportAsXML",
        "title": "Focus Pulse: Exportar como XML"
      },
      {
        "command": "focusPulse.authenticate",
        "title": "Focus Pulse: Autenticar cuenta"
      },
      {
        "command": "focusPulse.createGitHubToken",
        "title": "Focus Pulse: Crear/Gestionar Token de GitHub"
      },
      {
        "command": "focusPulse.enableAutoSync",
        "title": "Focus Pulse: Habilitar sincronización automática"
      },
      {
        "command": "focusPulse.disableAutoSync",
        "title": "Focus Pulse: Deshabilitar sincronización automática"
      },
      {
        "command": "focusPulse.manualSync",
        "title": "Focus Pulse: Sincronizar ahora"
      },
      {
        "command": "focusPulse.downloadSync",
        "title": "Focus Pulse: Descargar sincronización"
      },
      {
        "command": "focusPulse.listSyncs",
        "title": "Focus Pulse: Listar sincronizaciones"
      },
      {
        "command": "focusPulse.deleteSync",
        "title": "Focus Pulse: Eliminar sincronización"
      },
      {
        "command": "focusPulse.signOut",
        "title": "Focus Pulse: Cerrar sesión"
      },
      {
        "command": "focusPulse.syncStatus",
        "title": "Focus Pulse: Estado de sincronización"
      },
      {
        "command": "focusPulse.showGitStats",
        "title": "Focus Pulse: Ver estadísticas de Git"
      },
      {
        "command": "focusPulse.testNotification",
        "title": "Focus Pulse: Probar notificación"
      },
      {
        "command": "focusPulse.toggleNotifications",
        "title": "Focus Pulse: Activar/Desactivar notificaciones"
      },
      {
        "command": "focusPulse.notificationSettings",
        "title": "Focus Pulse: Configurar notificaciones"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Pulse",
      "properties": {
        "focusPulse.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el indicador de Focus Pulse en la barra de estado."
        },
        "focusPulse.minMinutesForScore": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "description": "Minutos mínimos de trabajo para que la puntuación de foco sea estable."
        },
        "focusPulse.score.timeWeight": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "description": "Peso del tiempo (minutos de trabajo) en el cálculo del Focus Score."
        },
        "focusPulse.score.editsWeight": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "description": "Peso de las ediciones por minuto en el cálculo del Focus Score."
        },
        "focusPulse.score.switchPenalty": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "description": "Penalización por cambios de archivo (switches por minuto)."
        },
        "focusPulse.enablePomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar el Pomodoro de Focus Pulse en la barra de estado."
        },
        "focusPulse.pomodoro.workMinutes": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "Duración del bloque de trabajo (minutos)."
        },
        "focusPulse.pomodoro.breakMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Duración del descanso (minutos)."
        },
        "focusPulse.goals.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Activar objetivos diarios (minutos y pomodoros)."
        },
        "focusPulse.goals.minutes": {
          "type": "number",
          "default": 60,
          "minimum": 1,
          "description": "Minutos de foco objetivo para completar el día."
        },
        "focusPulse.goals.pomodoros": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "Número de pomodoros objetivo para completar el día."
        },
        "focusPulse.deepWork.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Permitir el modo Deep Work en Focus Pulse."
        },
        "focusPulse.deepWork.durationMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Duración de una sesión de Deep Work (minutos)."
        },
        "focusPulse.deepWork.switchPenalty": {
          "type": "number",
          "default": 40,
          "minimum": 0,
          "description": "Penalización extra por cambios de archivo durante Deep Work."
        },
        "focusPulse.deepWork.xpBonus": {
          "type": "number",
          "default": 150,
          "minimum": 0,
          "description": "XP extra al completar una sesión de Deep Work."
        },
        "focusPulse.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token para sincronización (se guarda de forma segura)."
        },
        "focusPulse.assistant.personality": {
          "type": "string",
          "enum": [
            "motivador",
            "neutro",
            "zen",
            "humorístico"
          ],
          "default": "motivador",
          "description": "Personalidad del asistente virtual (afecta el tono de los mensajes)."
        },
        "focusPulse.assistant.flowProtection": {
          "type": "boolean",
          "default": true,
          "description": "Proteger el Flow State: evitar interrupciones cuando estás muy concentrado."
        },
        "focusPulse.assistant.contextualMessages": {
          "type": "boolean",
          "default": true,
          "description": "Mensajes contextuales según el tipo de archivo que estás editando."
        },
        "focusPulse.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Activar el sistema de notificaciones de Focus Pulse."
        },
        "focusPulse.notifications.style": {
          "type": "string",
          "enum": [
            "native",
            "toast",
            "both"
          ],
          "default": "toast",
          "description": "Estilo de las notificaciones: nativas de VS Code, toast en dashboard, o ambas."
        },
        "focusPulse.notifications.position": {
          "type": "string",
          "enum": [
            "top-right",
            "bottom-right",
            "top-left",
            "bottom-left"
          ],
          "default": "top-right",
          "description": "Posición de las notificaciones toast en el dashboard."
        },
        "focusPulse.notifications.duration": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Duración de las notificaciones toast en milisegundos."
        },
        "focusPulse.notifications.sound": {
          "type": "boolean",
          "default": false,
          "description": "Reproducir sonido con las notificaciones (experimental)."
        },
        "focusPulse.notifications.types.achievements": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones cuando se desbloquean logros."
        },
        "focusPulse.notifications.types.levelUp": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones cuando subes de nivel."
        },
        "focusPulse.notifications.types.pomodoro": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones cuando completas pomodoros."
        },
        "focusPulse.notifications.types.goals": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones cuando completas objetivos diarios."
        },
        "focusPulse.notifications.types.deepWork": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones de sesiones Deep Work."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild ./src/extension-refactored.ts --bundle --outfile=out/extension-refactored.js --external:vscode --format=cjs --platform=node",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests\"",
    "package": "vsce package --no-dependencies",
    "commit": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "publish:vsce": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "pnpm run publish:vsce && pnpm run publish:ovsx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.27.2",
    "ovsx": "^0.10.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1"
  }
}
